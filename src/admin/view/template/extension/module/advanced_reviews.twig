{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
        <ul class="nav nav-pills">
          <li class="active"><a data-toggle="tab" href="#tab-general">{{ tab_general }}</a></li>
          <li><a data-toggle="tab" href="#tab-coupons">{{ tab_coupons }}</a></li>
        </ul>


        <div class="tab-content">
          <div id="tab-general" class="tab-pane fade in active">
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
              <div class="col-sm-10">
                <select name="module_advanced_reviews_status" id="input-status" class="form-control">
                  {% if module_advanced_reviews_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-agree"><span data-toggle="tooltip" title="{{ help_terms }}">{{ entry_terms }}</span></label>
              <div class="col-sm-10">
              <select name="module_advanced_reviews_terms" id="input-agree" class="form-control">
                  <option value="0">{{ text_none }}</option>                      
                  {% for information in informations %}
                  {% if information.information_id == module_advanced_reviews_terms %}                      
                  <option value="{{ information.information_id }}" selected="selected">{{ information.title }}</option>                      
                  {% else %}                      
                  <option value="{{ information.information_id }}">{{ information.title }}</option>                      
                  {% endif %}
                  {% endfor %}                    
              </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-faq"><span data-toggle="tooltip" title="{{ help_verified_faq }}">{{ entry_verified_faq }}</span></label>
              <div class="col-sm-10">
              <select name="module_advanced_reviews_verified_faq" id="input-faq" class="form-control">
                  <option value="0">{{ text_none }}</option>                      
                  {% for information in informations %}
                  {% if information.information_id == module_advanced_reviews_verified_faq %}                      
                  <option value="{{ information.information_id }}" selected="selected">{{ information.title }}</option>                      
                  {% else %}                      
                  <option value="{{ information.information_id }}">{{ information.title }}</option>                      
                  {% endif %}
                  {% endfor %}                    
              </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-cut-names"><span data-toggle="tooltip" title="{{ help_cut_names }}">{{ entry_cut_names }}</span></label>
              <div class="col-sm-10">
                <select name="module_advanced_reviews_cut_names" id="input-cut-names" class="form-control">
                  {% if module_advanced_reviews_cut_names %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                  {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                  {% endif %}
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-require-email"><span data-toggle="tooltip" title="{{ help_require_email }}">{{ entry_require_email }}</span></label>
              <div class="col-sm-10">
                <select name="module_advanced_reviews_require_email" id="input-require-email" class="form-control">
                  {% if module_advanced_reviews_require_email %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                  {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
          </div>

          <div id="tab-coupons" class="tab-pane fade">
            
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-enable-coupons"><span data-toggle="tooltip" title="{{ help_enable_coupons }}">{{ entry_enable_coupons }}</span></label>
              <div class="col-sm-10">
                <select name="module_advanced_reviews_enable_coupons" id="input-enable-coupons" class="form-control">
                  {% if module_advanced_reviews_enable_coupons %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                  {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                  {% endif %}
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-coupons-type"><span data-toggle="tooltip" title="{{ help_coupons_type }}">{{ entry_coupons_type }}</span></label>
              <div class="col-sm-10">
                <select name="module_advanced_reviews_coupons_type" id="input-coupons-type" class="form-control">
                  {% if module_advanced_reviews_coupons_type == 'P' %}
                  <option value="P" selected="selected">{{ text_percent }}</option>
                  <option value="F">{{ text_fix }}</option>
                  {% else %}
                  <option value="P">{{ text_percent }}</option>
                  <option value="F" selected="selected">{{ text_fix }}</option>
                  {% endif %}
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-coupons-discount">{{ entry_coupons_discount }}</label>
              <div class="col-sm-10">
                <input type="number" name="module_advanced_reviews_coupons_discount" value="{{ module_advanced_reviews_coupons_discount }}" id="input-coupons-discount" class="form-control">
              </div>
            </div>

          </div>

        </div>


        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}