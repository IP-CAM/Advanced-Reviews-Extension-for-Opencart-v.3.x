{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
        <ul class="nav nav-pills">
          <li class="active"><a data-toggle="tab" href="#tab-general">{{ tab_general }}</a></li>
          <li><a data-toggle="tab" href="#tab-coupons">{{ tab_coupons }}</a></li>
        </ul>


        <div class="tab-content">
          <div id="tab-general" class="tab-pane fade in active">
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
              <div class="col-sm-10">
                <select name="module_advanced_reviews_status" id="input-status" class="form-control">
                  {% if module_advanced_reviews_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-agree"><span data-toggle="tooltip" title="{{ help_terms }}">{{ entry_terms }}</span></label>
              <div class="col-sm-10">
              <select name="module_advanced_reviews_terms" id="input-agree" class="form-control">
                  <option value="0">{{ text_none }}</option>                      
                  {% for information in informations %}
                  {% if information.information_id == module_advanced_reviews_terms %}                      
                  <option value="{{ information.information_id }}" selected="selected">{{ information.title }}</option>                      
                  {% else %}                      
                  <option value="{{ information.information_id }}">{{ information.title }}</option>                      
                  {% endif %}
                  {% endfor %}                    
              </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-faq"><span data-toggle="tooltip" title="{{ help_verified_faq }}">{{ entry_verified_faq }}</span></label>
              <div class="col-sm-10">
              <select name="module_advanced_reviews_verified_faq" id="input-faq" class="form-control">
                  <option value="0">{{ text_none }}</option>                      
                  {% for information in informations %}
                  {% if information.information_id == module_advanced_reviews_verified_faq %}                      
                  <option value="{{ information.information_id }}" selected="selected">{{ information.title }}</option>                      
                  {% else %}                      
                  <option value="{{ information.information_id }}">{{ information.title }}</option>                      
                  {% endif %}
                  {% endfor %}                    
              </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-cut-names"><span data-toggle="tooltip" title="{{ help_cut_names }}">{{ entry_cut_names }}</span></label>
              <div class="col-sm-10">
                <select name="module_advanced_reviews_cut_names" id="input-cut-names" class="form-control">
                  {% if module_advanced_reviews_cut_names %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                  {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                  {% endif %}
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-require-email"><span data-toggle="tooltip" title="{{ help_require_email }}">{{ entry_require_email }}</span></label>
              <div class="col-sm-10">
                <select name="module_advanced_reviews_require_email" id="input-require-email" class="form-control">
                  {% if module_advanced_reviews_require_email %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                  {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
          </div>

          <div id="tab-coupons" class="tab-pane fade">
            
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-enable-coupons"><span data-toggle="tooltip" title="{{ help_enable_coupons }}">{{ entry_enable_coupons }}</span></label>
              <div class="col-sm-10">
                <select name="module_advanced_reviews_enable_coupons" id="input-enable-coupons" class="form-control">
                  {% if module_advanced_reviews_enable_coupons %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                  {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                  {% endif %}
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-coupons-coupon"><span data-toggle="tooltip" title="{{ help_coupons_coupon }}">{{ entry_coupons_coupon }}</span></label>
              <div class="col-sm-10">
                <input name="module_advanced_reviews_coupons_coupon" id="input-coupons-coupon" value="{{ module_advanced_reviews_coupons_coupon }}" class="form-control" />
              </div>
            </div>


            <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                  <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/> {{ language.name }}</a></li>
                {% endfor %}
            </ul>
            <div class="tab-content">
              {% for language in languages %}
                  <div class="tab-pane" id="language{{ language.language_id }}">
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-subject{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_coupons_mail_subject }}">{{ entry_coupons_mail_subject }}</span></label>
                      <div class="col-sm-10">
                        <input type="text" name="module_advanced_reviews_coupons_mail[{{ language.language_id }}][subject]" id="input-subject{{ language.language_id }}" class="form-control">{{ module_advanced_reviews_coupons_mail[language.language_id] ? module_advanced_reviews_coupons_mail[language.language_id].subject }}</textarea>
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-mailtext{{ language.language_id }}"><span data-toggle="tooltip" title="{{ help_coupons_mailtext }}">{{ entry_coupons_mailtext }}</span></label>
                      <div class="col-sm-10">
                        <textarea name="module_advanced_reviews_coupons_mail[{{ language.language_id }}][mailtext]" id="input-mailtext{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ module_advanced_reviews_coupons_mail[language.language_id] ? module_advanced_reviews_coupons_mail[language.language_id].mailtext }}</textarea>
                      </div>
                    </div>
                  </div>
                {% endfor %}
                </div>
            </div>

          </div>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>

<link href="view/javascript/codemirror/lib/codemirror.css" rel="stylesheet"/>
<link href="view/javascript/codemirror/theme/monokai.css" rel="stylesheet"/>
<script type="text/javascript" src="view/javascript/codemirror/lib/codemirror.js"></script>
<script type="text/javascript" src="view/javascript/codemirror/lib/xml.js"></script>
<script type="text/javascript" src="view/javascript/codemirror/lib/formatting.js"></script>
<script type="text/javascript" src="view/javascript/summernote/summernote.min.js"></script>
<link href="view/javascript/summernote/summernote.min.css" rel="stylesheet"/>
<script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script>
<script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>

<script type="text/javascript">
  $('#language a:first').tab('show');
</script>
{{ footer }}